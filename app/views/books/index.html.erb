<% @books.each do |book| %>
  <div class="booyah-box col-10 offset-1">
    <h1><%= link_to book.name, book_path(book) %></h1><br />
    <i><%= book.author %></i><br /><br />
    <p1><%= book.description %></p1><br />
    <p2><%= book.genre %></p2><br />
    <p3><%= book.pub_date %></p3><br />

    <% if book.user.present? %>
      <small><%= book.user.email %></small>
    <% end %>
  </div>

  <hr />
<% end %>

<%= paginate @books %>
